<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    tools:ignore="ExtraText"
    android:layout_centerHorizontal="true"
    android:layout_margin="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtItemTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:text="Kevin Durant Golden state warriors"
            android:textAlignment="textStart"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:layout_below="@+id/txtItemTitle"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/txtItemPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="$$$"
            android:textAlignment="viewStart"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:src="@drawable/ic_baseline_arrow_right"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/txtItemPrice"
            android:layout_marginEnd="-50dp"
            android:layout_marginLeft="25dp"
            android:layout_alignBottom="@+id/txtItemPrice"
            android:layout_alignTop="@+id/txtItemPrice"/>




    </RelativeLayout>


</androidx.cardview.widget.CardView>